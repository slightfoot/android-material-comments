<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	>
	<data>
		<import type="android.view.View"/>
		<variable
			name="presenter"
			type="com.example.comments.CommentsActivity.CommentsPresenter"
			/>
		<variable
			name="position"
			type="int"
			/>
		<variable
			name="comment"
			type="com.example.comments.CommentModel"
			/>
		<variable
			name="expanded"
			type="boolean"
			/>
	</data>
	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:foreground="?selectableItemBackground"
		android:onClick="@{() -> presenter.onCommentClick(position, comment)}"
		android:orientation="vertical"
		android:paddingBottom="@dimen/vertical_margin"
		android:paddingLeft="@dimen/horizontal_margin"
		android:paddingRight="@dimen/horizontal_margin"
		android:paddingTop="@dimen/vertical_margin"
		>
		<ImageView
			android:id="@+id/image"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_marginEnd="8dp"
			android:layout_marginRight="8dp"
			android:src="@{comment.image}"
			tools:ignore="ContentDescription"
			tools:src="@drawable/person1"
			/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="54dp"
			android:layout_marginLeft="54dp"
			android:animateLayoutChanges="true"
			android:orientation="vertical"
			>
			<TextView
				android:id="@+id/name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:lines="1"
				android:text="@{comment.name}"
				android:textStyle="bold"
				tools:text="Username"
				/>
			<TextView
				android:id="@+id/email"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:autoLink="email"
				android:text="@{comment.email}"
				android:visibility="@{expanded ? View.VISIBLE : View.GONE}"
				tools:text="user@domain.com"
				tools:visibility="gone"
				/>
			<TextView
				android:id="@+id/body"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:ellipsize="end"
				android:maxLines="@{expanded ? Integer.MAX_VALUE : 1}"
				android:text="@{comment.body}"
				tools:maxLines="1"
				tools:text="Body text of the comment goes here."
				/>
		</LinearLayout>
	</FrameLayout>
</layout>
